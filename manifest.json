{
  "manifest_version": 2,
  "name": "Mathemorphosis",
  "version": "1.0",

  "description": "Mathemorphosis translates mathematical expressions into beautifully formatted text.",
  
  "browser_action": {
    "default_icon": "images/xsquared_inactive.png", 
    "default_popup": "index.html"
  },

  "icons": {
    "16": "./images/xsquared_inactive_16px.png",
    "48": "./images/xsquared_inactive_48px.png",
    "128": "./images/xsquared_inactive_128px.png"
  },
  
  "background":{
    "persistent": false,
    "scripts": ["./scripts/MathJax/MathJax.js", "./scripts/main.js"]
  },
  
  "permissions": [
    "contextMenus",
    "tabs"
  ]

}
