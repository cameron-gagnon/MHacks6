{
  "manifest_version": 2,
  "name": "Mathemorphosis",
  "version": "1.0",

  "description": "Mathemorphosis translates mathematical expressions into beautifully formatted text.",
  
  "browser_action": {
    "default_icon": "images/xsquared.png", 
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "./images/xsquared_16px.png",
    "48": "./images/xsquared_48px.png",
    "128": "./images/xsquared_128.png"
  },
  
  "background":{
    "persistent": false,
    "scripts": ["./scripts/main.js", "./scripts/MathJax/MathJax.js"]
  },
  
  "permissions": [
    "contextMenus",
    "tabs"
  ]

//  "web_accessible_resources": [
//    "./scripts/MathJax/*"
//  ]
//
 
}
